@model IEnumerable<SPC_Coopenae.UI.Areas.Mantenimientos.Models.UnidadNegocio>

@{
    ViewBag.Title = "Listado de Sucursales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Registrar Nueva Sucursal", "Registrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdUnidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Meta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdUnidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.Encode((ViewBag.Meta as SelectList).SingleOrDefault(x => int.Parse(x.Value) == item.Meta).Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IdUnidad }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.IdUnidad }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.IdUnidad })
        </td>
    </tr>
}

</table>
