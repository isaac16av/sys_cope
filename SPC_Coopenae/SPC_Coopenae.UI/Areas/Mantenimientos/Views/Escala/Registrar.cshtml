@model SPC_Coopenae.UI.Areas.Mantenimientos.Models.Escala

@{
    ViewBag.Title = "Registrar";
}

<h2>Registrar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Escala</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-2">
            <input type="submit" value="Agregar Fila" class="btn btn-default" />
        </div>
    </div>

    <div class="container">
        <div class="row" style="margin-left:6%">
            <div class="form-group col-md-3">
                <label for="minimo" class="control-label">Porcentaje Minimo</label>
                <div class="">
                    <input class="form-control" type="number" name="minimo" id="minimo" style="width:35%" />
                </div>
            </div>

            <div class="form-group col-md-3">
                <label for="maximo" class="control-label ">Porcentaje Maximo</label>
                <div class="">
                    <input class="form-control" type="number" name="maximo" id="maximo" style="width:35%" />
                </div>
            </div>

            <div class="form-group col-md-3">
                <label for="comision" class="control-label">Comision</label>
                <div class="">
                    <input class="form-control" type="number" name="comision" id="comision" style="width:35%" />
                </div>
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
