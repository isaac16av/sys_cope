@model SPC_Coopenae.UI.Areas.Mantenimientos.Models.Escala


@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Escala</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

    </dl>
 
    <table class="table">
        <thead>
            <tr>
                <th>Porcentaje Minimo</th>
                <th>Porcentaje Maximo</th>
                <th>Porcentaje Comision</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var data in ViewBag.DetallesDeEscala)
            {
            <tr>
                <td>
                    @data.PCTMinimo
                </td>
                <td>
                    @data.PCTMaximo
                </td>
                <td>
                    @data.PCTComision
                </td>
            </tr>
            }
            
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
