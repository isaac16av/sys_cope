@model IEnumerable<SPC_Coopenae.UI.Areas.Mantenimientos.Models.Sucursal>

@{
    ViewBag.Title = "Listado de Sucursales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Registrar Nueva Sucursal", "Registrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdSucursal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreSucursal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdSucursal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreSucursal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IdSucursal }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.IdSucursal }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.IdSucursal })
        </td>
    </tr>
}

</table>
